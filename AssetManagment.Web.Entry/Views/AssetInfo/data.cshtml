@using AssetManagment.Application.Asset
@using AssetManagment.Core.Entities
@inject IAssetService assetService;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	List<AssetCategory> categories = assetService.GetAssetCateGories();
}

<div class="container">
	<div class="card p-3 mb-3">
		<div class="row">
			<div class="col-auto">
				<button type="button" class="btn btn-primary">新增</button>
			</div>
		</div>
	</div>

	<div class="card p-3">
		@if(categories.Count == 0)
		{
			<span class="self-item-center">空</span>
		}
		else
		{
			<table class="table">
				<thead>
					<tr>
						<th>编码</th>
						<th>名称</th>
					</tr>
				</thead>
				<tbody>
					@for(var i = 0; i < categories.Count; i++)
					{
						<tr data-id = "@categories[i].Id">
							<td>@categories[i].Code</td>
							<td>@categories[i].Title</td>
						</tr>
					}

				</tbody>
			</table>
		}
		
	</div>
</div>
